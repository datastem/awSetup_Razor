@model awSetup_Razor.Models.ViewModels.TwilioPhoneEdit

<div class="modal fade" id="create-customerphones" tabindex="-1" role="dialog" aria-labelledby="headerLabel" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="headerLabel">Create New Phone</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-page-handler="CustomerPhoneCreate">
                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="CustomerPhone.CustomerId" class="control-label">@Model.CustomerPhone.CustomerId</label>
                    </div>
                    <div class="form-group">
                        <label asp-for="CustomerPhone.CustomerCode" class="control-label">@Model.CustomerPhone.CustomerCode</label>
                    </div>
                    <div class="form-group">
                        <label asp-for="CustomerPhone.TwilioPhoneNumber" class="control-label"></label>
                        <select asp-for="CustomerPhone.TwilioPhoneNumber" class="form-control" asp-items="@Model.AvailableNumbersSL"></select>
                        <span asp-validation-for="CustomerPhone.TwilioPhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CustomerPhone.ForwardNumber" class="control-label"></label>
                        <input asp-for="CustomerPhone.ForwardNumber" class="form-control" />
                        <span asp-validation-for="CustomerPhone.ForwardNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CustomerPhone.UnhandledMessage" class="control-label"></label>
                        <textarea asp-for="CustomerPhone.UnhandledMessage" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="CustomerPhone.UnhandledMessage" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-save="modal">Save</button>
                <button type="button" class="btn btn-primary" data-saving="modal" disabled style="display:none;">
                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                    Saving...
                </button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
